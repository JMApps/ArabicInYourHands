<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/items_card_margin"
    android:minHeight="100dp"
    app:cardCornerRadius="@dimen/main_item_card_radius"
    app:cardElevation="@dimen/item_card_elevation">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llContentItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackgroundBorderless"
        android:gravity="center"
        android:minHeight="100dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/main_padding_mini"
            android:paddingTop="@dimen/main_padding_mini"
            android:paddingRight="@dimen/main_padding_mini">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvArabicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_names" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvArabicContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_content_ar" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="0.5dp"
                android:layout_margin="8dp"
                android:background="@color/main" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnShareItem"
                android:layout_width="@dimen/main_app_icon_size"
                android:layout_height="@dimen/main_app_icon_size"
                android:background="@drawable/ic_share_accent" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/main_padding_mini"
            android:paddingRight="@dimen/main_padding_mini"
            android:paddingBottom="@dimen/main_padding_mini">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTranslationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_names" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTranslationContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_content_ru" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>